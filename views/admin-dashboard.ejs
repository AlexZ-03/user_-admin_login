<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Welcome to Admin Dashboard</span>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/logout" class="btn btn-danger">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <table class="table table-striped table-hover">
            <tr>
                <th>Username</th>
                <th>Actions</th>
            </tr>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td>
                    <a href="/edit-user/<%= user._id %>" class="btn btn-primary btn-sm">Edit</a>
                    <form action="/delete-user/<%= user._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXlFdBXlJp6j/z6aDJmnd/1T9v4y+AtV3EmxMhIDpK/tt0z1sBfLZ4Fsn8v+" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhG+MyrpK+Xt2KHEL8FjqPzFHIJ5ww5JkMxJmg3iZj6fLIqDpW3r5L5I2ow" crossorigin="anonymous"></script>
    
    
</body>
</html>
